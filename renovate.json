{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base",
        "schedule:nonOfficeHours",
        ":enablePreCommit"
    ],
    "packageRules": [
        {
            "description": "Automatically merge minor and patch-level updates",
            "matchUpdateTypes": [
                "minor",
                "patch",
                "digest"
            ],
            "automerge": true,
            "automergeType": "branch"
        }
    ],
    "platformAutomerge": true
}